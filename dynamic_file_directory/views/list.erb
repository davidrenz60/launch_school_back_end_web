<!doctype html>
<html>
<head>
    <meta charset="utf-8">
</head>

<body>
	<h1>Files</h1>
	<ul>
		<% @files.each do |file| %>
			<li>
				<a href="<%= file %>"><%=file%> </a>
			</li>
		<% end %>
	</ul>
	
	<p>
		<% if params[:sort] == "desc" %>
			<a href="/">sort ascending</a>
		<% else %>
			<a href="/?sort=desc">sort descending</a>
		<% end %>
	</p>
</body>
</html>